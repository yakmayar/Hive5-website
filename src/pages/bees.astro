  <style>
    .bee-cursor,
    .bee-cursor * {
      cursor: url('data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22 viewBox=%220 0 40 40%22><text y=%2232%22 font-size=%2232%22>üêù</text></svg>') 20 20, auto !important;
