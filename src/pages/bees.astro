      width: calc(33.333% - 21px);
    }

    @media (max-width: 768px) {
      .facts-carousel-fact {
        width: 100%;
      }
    }
  </style>

  <script is:inline>
    // Colonies carousel
    let currentColoniesSlide = 0;
    const coloniesSlides = document.querySelectorAll('.colonies-carousel-slide');
    const coloniesDots = document.querySelectorAll('.colonies-carousel-dot');
    const coloniesTrack = document.querySelector('.colonies-carousel-track');
    const coloniesPrevBtn = document.getElementById('colonies-prev-btn');
    const coloniesNextBtn = document.getElementById('colonies-next-btn');
    const totalColoniesSlides = coloniesSlides.length;

    function updateColoniesCarousel() {
      if (coloniesTrack) {
        coloniesTrack.style.transform = `translateX(-${currentColoniesSlide * 100}%)`;
      }
      coloniesDots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentColoniesSlide);
      });
    }

    function nextColoniesSlide() {
      currentColoniesSlide = (currentColoniesSlide + 1) % totalColoniesSlides;
      updateColoniesCarousel();
    }

    function prevColoniesSlide() {
      currentColoniesSlide = (currentColoniesSlide - 1 + totalColoniesSlides) % totalColoniesSlides;
      updateColoniesCarousel();
    }

    if (coloniesNextBtn) {
      coloniesNextBtn.addEventListener('click', nextColoniesSlide);
    }
    if (coloniesPrevBtn) {
      coloniesPrevBtn.addEventListener('click', prevColoniesSlide);
    }

    coloniesDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentColoniesSlide = index;
        updateColoniesCarousel();
      });
    });

    let coloniesAutoScroll = setInterval(nextColoniesSlide, 5000);

    const coloniesCarouselContainer = document.querySelector('.colonies-carousel-container');
    if (coloniesCarouselContainer) {
      coloniesCarouselContainer.addEventListener('mouseenter', () => {
        clearInterval(coloniesAutoScroll);
      });
      coloniesCarouselContainer.addEventListener('mouseleave', () => {
        coloniesAutoScroll = setInterval(nextColoniesSlide, 5000);
      });
    }

    updateColoniesCarousel();

    // Queens carousel
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    const track = document.querySelector('.carousel-track');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const totalSlides = slides.length;

    function updateCarousel() {
      if (track) {
        track.style.transform = `translateX(-${currentSlide * 100}%)`;
      }
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentSlide);
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateCarousel();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateCarousel();
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }
    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        updateCarousel();
      });
    });

    let autoScroll = setInterval(nextSlide, 5000);

    const carouselContainer = document.querySelector('.carousel-container');
    if (carouselContainer) {
      carouselContainer.addEventListener('mouseenter', () => {
        clearInterval(autoScroll);
      });
      carouselContainer.addEventListener('mouseleave', () => {
        autoScroll = setInterval(nextSlide, 5000);
      });
    }

    updateCarousel();

    // Care carousel
    let currentCareSlide = 0;
    const careSlides = document.querySelectorAll('.care-carousel-slide');
    const careDots = document.querySelectorAll('.care-carousel-dot');
    const careTrack = document.querySelector('.care-carousel-track');
    const carePrevBtn = document.getElementById('care-prev-btn');
    const careNextBtn = document.getElementById('care-next-btn');
    const totalCareSlides = careSlides.length;

    function updateCareCarousel() {
      if (careTrack) {
        careTrack.style.transform = `translateX(-${currentCareSlide * 100}%)`;
      }
      careDots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentCareSlide);
      });
    }

    function nextCareSlide() {
      currentCareSlide = (currentCareSlide + 1) % totalCareSlides;
      updateCareCarousel();
    }

    function prevCareSlide() {
      currentCareSlide = (currentCareSlide - 1 + totalCareSlides) % totalCareSlides;
      updateCareCarousel();
    }

    if (careNextBtn) {
      careNextBtn.addEventListener('click', nextCareSlide);
    }
    if (carePrevBtn) {
      carePrevBtn.addEventListener('click', prevCareSlide);
    }

    careDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentCareSlide = index;
        updateCareCarousel();
      });
    });

    let careAutoScroll = setInterval(nextCareSlide, 5000);

    const careCarouselContainer = document.querySelector('.care-carousel-container');
    if (careCarouselContainer) {
      careCarouselContainer.addEventListener('mouseenter', () => {
        clearInterval(careAutoScroll);
      });
      careCarouselContainer.addEventListener('mouseleave', () => {
        careAutoScroll = setInterval(nextCareSlide, 5000);
      });
    }

    updateCareCarousel();

    // Facts carousel
    let currentFactsSlide = 0;
    const factsItems = document.querySelectorAll('.facts-carousel-fact');
    const factsDots = document.querySelectorAll('.facts-carousel-dot');
    const factsTrack = document.querySelector('.facts-carousel-track');
    const factsPrevBtn = document.getElementById('facts-prev-btn');
    const factsNextBtn = document.getElementById('facts-next-btn');
    const totalFactsSlides = factsItems.length;

    function getVisibleFactsCount() {
      return window.innerWidth <= 768 ? 1 : 3;
    }

    function getMaxFactsSlide() {
      return totalFactsSlides - getVisibleFactsCount();
    }

    function updateFactsCarousel() {
      if (factsTrack && factsItems.length > 0) {
        const isMobile = window.innerWidth <= 768;
        
        if (isMobile) {
          // Mobile: show one fact at a time
          factsTrack.style.transform = `translateX(-${currentFactsSlide * 100}%)`;
        } else {
          // Desktop: show three facts at a time
          const factWidth = factsItems[0].offsetWidth;
          const gap = 32; // 8 * 4px = 32px gap
          const offset = currentFactsSlide * (factWidth + gap);
          factsTrack.style.transform = `translateX(-${offset}px)`;
        }
      }
      
      // Update center fact highlight (desktop only)
      factsItems.forEach((fact, index) => {
        if (window.innerWidth > 768) {
          const centerIndex = currentFactsSlide + 1; // Middle fact
          if (index === centerIndex) {
            fact.style.transform = 'scale(1.05)';
            fact.style.boxShadow = '0 10px 30px rgba(245, 158, 11, 0.3)';
          } else {
            fact.style.transform = 'scale(1)';
            fact.style.boxShadow = '';
          }
        } else {
          // Reset transforms on mobile
          fact.style.transform = 'scale(1)';
          fact.style.boxShadow = '';
        }
      });
      
      factsDots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentFactsSlide);
      });
    }

    function nextFactsSlide() {
      const maxSlide = getMaxFactsSlide();
      if (currentFactsSlide < maxSlide) {
        currentFactsSlide++;
      } else {
        currentFactsSlide = 0;
      }
      updateFactsCarousel();
    }

    function prevFactsSlide() {
      const maxSlide = getMaxFactsSlide();
      if (currentFactsSlide > 0) {
        currentFactsSlide--;
      } else {
        currentFactsSlide = maxSlide;
      }
      updateFactsCarousel();
    }

    if (factsNextBtn) {
      factsNextBtn.addEventListener('click', nextFactsSlide);
    }
    if (factsPrevBtn) {
      factsPrevBtn.addEventListener('click', prevFactsSlide);
    }

    factsDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        const maxSlide = getMaxFactsSlide();
        currentFactsSlide = Math.min(index, maxSlide);
        updateFactsCarousel();
      });
    });

    let factsAutoScroll = setInterval(nextFactsSlide, 5000);

    const factsCarouselContainer = document.querySelector('.facts-carousel-container');
    if (factsCarouselContainer) {
      factsCarouselContainer.addEventListener('mouseenter', () => {
        clearInterval(factsAutoScroll);
      });
      factsCarouselContainer.addEventListener('mouseleave', () => {
        factsAutoScroll = setInterval(nextFactsSlide, 5000);
      });
    }

    // Handle window resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        currentFactsSlide = 0;
        updateFactsCarousel();
      }, 250);
    });

    updateFactsCarousel();
  </script>
