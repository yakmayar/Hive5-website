        <div class="flex justify-center gap-2 mt-6">
          <button class="facts-carousel-dot w-3 h-3 rounded-full bg-amber-300 transition-all duration-300" data-index="0"></button>
          <button class="facts-carousel-dot w-3 h-3 rounded-full bg-amber-300 transition-all duration-300" data-index="1"></button>
