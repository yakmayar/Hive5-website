---
import BaseLayout from '../layouts/BaseLayout.astro';

const hexagons = [
  { id: 2, image: '/images/hex2.jpg', title: 'About Us', link: '/about' },
  { id: 3, image: '/images/hex3.jpg', title: 'Our Bees', link: '/bees' },
  { id: 4, image: '/images/hex4.jpg', title: 'Products', link: '/products' },
  { id: 5, image: '/images/hex5.jpg', title: 'Contact', link: '/contact' }
];
---

<BaseLayout 
  title="Home"
>
  <div class="min-h-screen bg-gradient-to-br from-amber-50 via-yellow-50 to-orange-50 overflow-hidden relative bee-cursor">
    <!-- Animated Background Pattern -->
    <div class="fixed inset-0 opacity-10 pointer-events-none">
      <div class="absolute inset-0 bg-pattern"></div>
    </div>

    <!-- Hero Section -->
    <header class="relative flex flex-col items-center justify-start overflow-hidden pt-0 pb-0 hero-section" style="min-height: 300px;">
      <!-- Dark Overlay with smoother transition -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-transparent z-10"></div>
      
      <div class="relative z-20 text-center px-4 mt-0">
        <!-- Logo -->
        <div class="mb-0 animate-bounce-slow flex justify-center">
          <img 
            src="/images/logo.png" 
            alt="Hive Five Apiary Logo" 
            class="w-[700px] h-[700px] max-w-[85vw] max-h-[85vh] drop-shadow-2xl"
          />
        </div>
      </div>
    </header>

    <!-- Honeycomb Gallery Section -->
    <section class="relative pt-2 pb-50 px-4 hexagon-section">
      <div class="max-w-[1800px] mx-auto">
        <!-- Hexagon Grid - 4 hexagons -->
        <div class="flex flex-col items-center gap-6">
          <div class="flex flex-wrap justify-center gap-2">
            {hexagons.map((hex) => (
              <a href={hex.link} class="hexagon-container">
                <div 
                  class="hexagon"
                  style={`background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('${hex.image}'); background-size: cover; background-position: center;`}
                >
                  <div class="hexagon-content">
                    <span class="hexagon-label">{hex.title}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section with North Hills Background - Split Images -->
    <section class="relative py-24 cta-section overflow-hidden">
      <div class="absolute inset-0 flex">
        <!-- Left Image -->
        <div class="w-1/2 h-full">
          <img 
            src="/images/north-hills1.jpg" 
            alt="North Hills Raleigh" 
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Right Image -->
        <div class="w-1/2 h-full">
          <img 
            src="/images/north-hills2.jpg" 
            alt="North Hills Raleigh" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>
      
      <!-- Light overlay for text readability only -->
      <div class="absolute inset-0 bg-black/35"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto text-center px-4">
        <h2 class="text-5xl font-bold text-white mb-6" style="text-shadow: 2px 2px 8px rgba(0,0,0,0.7);">
          Give Nature a Hive Five!
        </h2>
        <p class="text-2xl text-white font-light" style="text-shadow: 2px 2px 6px rgba(0,0,0,0.7);">
          Located in Midtown Raleigh
        </p>
      </div>
    </section>
  </div>

  <!-- Spacer between content and footer -->
  <div class="bg-gradient-to-br from-amber-50 via-yellow-50 to-orange-50 h-24"></div>

  <style>
    @keyframes bgFloat {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    .animate-bounce-slow {
      animation: bounce 3s ease-in-out infinite;
    }

    @keyframes bounce {
      0%, 100% {
        transform: translateY(-5%);
        animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
      }
      50% {
        transform: translateY(0);
        animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
      }
    }

    .bg-pattern {
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0l25.98 15v30L30 60 4.02 45V15z' fill='%23f59e0b' fill-opacity='0.3' stroke='%23f59e0b' stroke-width='1'/%3E%3C/svg%3E");
      background-size: 60px 60px;
      animation: bgFloat 20s ease-in-out infinite;
    }

    .bee-cursor,
    .bee-cursor * {
      cursor: url('data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22 viewBox=%220 0 40 40%22><text y=%2232%22 font-size=%2232%22>üêù</text></svg>') 20 20, auto !important;
    }

    .hero-section {
      z-index: 20;
    }

    .hexagon-section {
      z-index: 40;
    }

    .cta-section {
      z-index: 20;
    }

    .hexagon-container {
      width: 340px;
      height: 392px;
      position: relative;
      text-decoration: none;
      display: block;
    }
    
    .hexagon {
      width: 100%;
      height: 100%;
      position: relative;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      filter: brightness(0.95) saturate(1.1);
      display: flex;
      align-items: center;
      justify-content: center;
      clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    }
    
    .hexagon::before {
      content: '';
      position: absolute;
      inset: -2px;
      background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
      clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
      z-index: -1;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .hexagon::after {
      content: '';
      position: absolute;
      inset: 0;
      clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
      background-image: inherit;
      background-color: inherit;
      background-size: inherit;
      background-position: inherit;
    }

    .hexagon-content {
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      width: 100%;
      height: 100%;
    }

    .hexagon-emoji {
      opacity: 0;
      position: absolute;
      top: 35%;
      transform: translateY(-50%);
      transition: opacity 0.3s ease;
    }

    .hexagon-container:hover .hexagon-emoji {
      opacity: 1;
    }

    .hexagon-label {
      color: white;
      font-weight: bold;
      font-size: 2rem;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
      transition: transform 0.3s ease, font-size 0.3s ease;
    }

    .hexagon-container:hover .hexagon-label {
      font-size: 2.5rem;
    }
    
    .hexagon-container:hover .hexagon {
      transform: scale(1.08);
      filter: brightness(1) saturate(1.2);
    }
    
    .hexagon-container:hover .hexagon::before {
      background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
      inset: -3px;
    }
    
    @media (max-width: 1200px) {
      .hexagon-container {
        width: 260px;
        height: 300px;
      }
    }
    
    @media (max-width: 768px) {
      .hexagon-container {
        width: 180px;
        height: 207px;
      }
      .hexagon-label {
        font-size: 1.5rem;
      }
      .hexagon-container:hover .hexagon-label {
        font-size: 1.75rem;
      }
    }
  </style>
</BaseLayout>