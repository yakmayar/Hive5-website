---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home" description="Welcome to Hive Five Apiary - Your source for pure, local honey">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-honey-100 to-amber-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Welcome to Hive Five Apiary
        </h1>
        <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
          Sustainably crafted, pure local honey from our backyard to yours
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/products" class="bg-honey-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-honey-700 transition">
            Shop Honey
          </a>
          <a href="/about" class="bg-white text-honey-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition border-2 border-honey-600">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose Our Honey?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="text-5xl mb-4">üåº</div>
          <h3 class="text-xl font-semibold mb-3">100% Pure</h3>
          <p class="text-gray-600">No additives, no processing - just pure, raw honey straight from the hive</p>
        </div>
        <div class="text-center p-6">
          <div class="text-5xl mb-4">üå±</div>
          <h3 class="text-xl font-semibold mb-3">Sustainable</h3>
          <p class="text-gray-600">Ethical beekeeping practices that prioritize bee health and environmental care</p>
        </div>
        <div class="text-center p-6">
          <div class="text-5xl mb-4">üè°</div>
          <h3 class="text-xl font-semibold mb-3">Local</h3>
          <p class="text-gray-600">Supporting local ecosystems and providing truly local honey from our community</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-honey-600 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-4">Visit Our Apiary</h2>
      <p class="text-lg mb-8">Interested in learning about beekeeping or seeing our hives? Get in touch!</p>
      <a href="/contact" class="bg-white text-honey-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition inline-block">
        Contact Us
      </a>
    </div>
  </section>
</BaseLayout>