---
import '../styles/global.css';
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Hive Five Apiary</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    body,
    body * {
      cursor: url('data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22 viewBox=%220 0 40 40%22><text y=%2232%22 font-size=%2232%22>üêù</text></svg>') 20 20, auto !important;
    }
  </style>
</head>
<body class="bg-amber-50 text-gray-900">
  <nav class="bg-gray-900 shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-24">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-2xl">üêù</span>
          <span class="text-xl font-bold text-amber-400">Hive Five Apiary</span>
        </a>
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-gray-300 hover:text-amber-400 transition">Home</a>
          <a href="/about" class="text-gray-300 hover:text-amber-400 transition">About</a>
          <a href="/bees" class="text-gray-300 hover:text-amber-400 transition">Our Bees</a>
          <a href="/products" class="text-gray-300 hover:text-amber-400 transition">Products</a>
          <a href="/contact" class="text-gray-300 hover:text-amber-400 transition">Contact</a>
        </div>
        <button id="mobile-menu-btn" class="md:hidden text-gray-300" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    <div id="mobile-menu" class="hidden md:hidden bg-gray-900 border-t border-gray-700">
      <div class="px-4 py-3 space-y-3">
        <a href="/" class="block text-gray-300 hover:text-amber-400">Home</a>
        <a href="/about" class="block text-gray-300 hover:text-amber-400">About</a>
        <a href="/bees" class="block text-gray-300 hover:text-amber-400">Our Bees</a>
        <a href="/products" class="block text-gray-300 hover:text-amber-400">Products</a>
        <a href="/contact" class="block text-gray-300 hover:text-amber-400">Contact</a>
      </div>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 py-8 text-center">
      <p class="text-gray-400 text-sm">&copy; {new Date().getFullYear()} Hive Five Apiary. All rights reserved.</p>
    </div>
  </footer>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>